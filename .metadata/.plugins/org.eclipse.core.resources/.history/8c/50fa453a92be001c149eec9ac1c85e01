package application;

import java.util.Scanner;

public class Program {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		
		// Matrizes são vetores de duas dimensões, vetores de vetores
		System.out.println("Insira o valor de \"M\": ");
		int m = sc.nextInt();
		System.out.println("Insira o valor de \"N\": ");
		int n = sc.nextInt();
		int[][] mat = new int[m][n];
		
		for (int i=0; i<mat.length; i++) {
			for (int j=0; j<mat[i].length; j++) {
				System.out.println("Insira o valor da posição " + i + ", " + j);
				mat[i][j] = sc.nextInt();
			}
		}
		
		System.out.println("Insira o número que deseja buscar na matriz: ");
		int x = sc.nextInt();
		
		for (int i=0; i<mat.length; i++) {
			for (int j=0; j<mat[i].length; j++) {
				if (mat[i][j] == x) {
					System.out.println("Position " + i + "," + j + ":");
					if (j > 0) {
						System.out.println("Left: " + mat[i][j-1]);
					}
					if (i > 0) {
						System.out.println("Up: " + mat[i-1][j]);
					}
					if (j < mat[i].length-1) {
						System.out.println("Right: " + mat[i][j+1]);
					}
					if (i < mat.length-1) {
						System.out.println("Down: " + mat[i+1][j]);
					}
				} else {
					System.out.println("Número não encontrado.");
				}
			}
		}
		
		sc.close();
	}
}
