package aplication;

import java.util.Locale;
import java.util.Scanner;

import entities.Product;



public class Program {

	public static void main(String[] args) {
		
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in); 

		Product product1 = new Product();
		
		System.out.println("Nome");
		product1.name = sc.next();
		System.out.println("Preço");
		product1.price = sc.nextDouble();
		System.out.println("Quantidade");
		product1.quantity = sc.nextInt();
		
		System.out.printf("%s, $%.2f, %d unidades, total: $%.2f%n", product1.name, product1.price, product1.quantity, product1.totalValueInStock());
		
		System.out.println("to add");
		product1.addProducts(sc.nextInt());
		
		System.out.println("to remove");
		product1.removeProducts(sc.nextInt());

		System.out.printf("%s, $%.2f, %d unidades, total: $%.2f%n", product1.name, product1.price, product1.quantity, product1.totalValueInStock());
		
		sc.close();
	}

}
