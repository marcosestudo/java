package application;

import java.util.Locale;
import java.util.Scanner;

public class Program {

	public static void main(String[] args) {

		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);

		// Matrizes são vetores de duas dimensões, vetores de vetores
		System.out.println("Insira o valor de \"M\"");
		int m = sc.nextInt();
		System.out.println("Insira o valor de \"N\"");
		int n = sc.nextInt();

		int[][] vect = new int[m][n];

		for (int i = 0; vect.length < m; i++) {
			for (int j = 0; vect[i].length < n; j++) {
				System.out.println("Insira o valor da posição " + i + ", " + j);
				vect[i][j] = sc.nextInt();
			}
		}

		for (int i = 0; vect.length < m; i++) {
			for (int j = 0; vect[i].length < n; j++) {
				System.out.print(vect[i][j] + " ");
			}
			System.out.println();
		}

		sc.close();

	}

	
	
}
