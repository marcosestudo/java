package application;

import java.util.Locale;
import java.util.Scanner;

import util.Calculator;

public class Program {

	public static void main(String[] args) {

		// membros estáticos podem ser chamados de membros de classe
		// Não precisam de instanciados para serem usador
		// Como exemplo de membro estático temos a função Math.sqrt()
		// O método Scanner(), por exemplo, por não ser estático, precisa ser
		// instanciado com o new Scanner(), como na linha 19 deste arquivo

		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);

		System.out.print("Enter radius: ");
		double radius = sc.nextDouble();
		double c = Calculator.circumference(radius);
		double v = Calculator.volume(radius);

		System.out.printf("Circumference: %.2f%n", c);
		System.out.printf("Volume: %.2f%n", v);
		System.out.printf("PI value: %.2f%n", Calculator.PI);

		sc.close();
	}

}
