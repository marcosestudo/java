package application;

import java.util.ArrayList;
import java.util.List;
import java.util.stream.Collectors;

public class Program {

	public static void main(String[] args) {

		// List é uma interface, não permite instanciação como as classes
		// devemos usar uma classe para implementá-la como a classe ArrayList
		// namesas não aceitam tipos primitivos, devemos usar wrapper classes
		List<String> names = new ArrayList<>();

		names.add("Maria");
		names.add("Alex");
		names.add("Bob");
		names.add("Anna");
		names.add(2, "Marco");

		System.out.println(names.size());
		for (String name : names) {
			System.out.println(name);
		}
		
		System.out.println("---------------------");
		names.removeIf(name -> name.charAt(0) == 'M');
		for (String name : names) {
			System.out.println(name);
		}
		
		System.out.println("---------------------");
		System.out.println("Index of Bob: " + names.indexOf("Bob"));
		System.out.println("Index of Marco: " + names.indexOf("Marco"));
		System.out.println("---------------------");
		
		List<String> result = names.stream().filter(name -> name.charAt(0) == 'A').collect(Collectors.toList());
		for (String name : result) {
			System.out.println(name);
		}
		
		System.out.println("---------------------");
		// Filtrar namesa pelo predicado
		String name = names.stream().filter(name -> name.charAt(0) == 'J').findFirst().orElse(null);
		System.out.println(name);
	}
}
